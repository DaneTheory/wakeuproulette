<?xml version="1.0" encoding="UTF-8"?>
<Response>
    {% if gather %}
        <Gather action="/privaterequest/{{ url }}" numDigits="1">
            <Say>{{ gather }}</Say>
        </Gather>
    {% endif %}
    {% if say %}
        <Say>{{ say }}</Say>
    {% endif %}
    {% if confname %}
        <Dial         {% if timelimit %}timeLimit="{{ timelimit }}"{% endif %}
                      {% if record %}record="true" action="/recordingrequest/{{ record }}" method="POST"{% endif %}
                      {% if url %}action="/wakeuprequest/{{ url }}" method="POST"{% endif %}
                      {% if hanguponstar %} hangupOnStar="True" {% endif %}>
        {% if confname %}
            <Conference beep="{{ beep }}">{{ confname }}</Conference>
        {% endif %}
        </Dial>
    {% endif %}
    {% if rating %}
        <Gather action="/ratingrequest/{{ gatherurl }}" numDigits="1">
            <Say>{{ rating }}</Say>
        </Gather>
    {% endif %}
    {% if goodbye %}
        <Say>{{ goodbye }}</Say>
    {% endif %}
    {% if hangup %}
        <Hangup/>
    {% endif %}
</Response>